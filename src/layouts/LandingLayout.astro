---
import Layout from "./Layout.astro";
import Header from "../components/widgets/Header.astro";
import Footer from "../components/widgets/Footer.astro";

export interface Props {
    title?: String;
}

const { title = "Teenhacks LI" } = Astro.props;
const Sticky = true;
const Menu = true;
---

<Layout title={title}>
    <main transition:animate="slide" class="absolute inset-0 h-screen w-screen font-display">
        <Header transition:persist isSticky={Sticky} showMenu={Menu} class:list={"sticky top-0"} />
        <slot />

        <Footer />
    </main>
</Layout>

<style>
  /* Remove all styles that were hiding the main content */
</style>
