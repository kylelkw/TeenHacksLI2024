---
import Layout from "./LandingLayout.astro";
import Image from "astro/components/Image.astro";
const{
    items = []
} = Astro.props
---

<Layout>
    {
        items && (
            <div class="w-screen h-fit p-6 sm:p-10 md:p-14 mt-16 sm:mt-20 flex flex-col gap-8 sm:gap-14">
                {items.map(({title, author, tags, img}) => (
                    <>
                    <section class="w-full flex justify-center">
                        <Image src={img || "/placeholder.svg"} alt="Headshot" width="800" height="1280" class:list={"w-full sm:w-[80%] md:w-[60%] aspect-video rounded-md image-cover"}/>
                    </section>
                    <section class="w-full text-content-1 flex flex-col items-center gap-8 sm:gap-14">
                        <div class="w-full sm:w-[80%] md:w-2/3 flex flex-col justify-center gap-4 sm:gap-7">
                            <span class="text-xl sm:text-3xl bold underline underline-offset-[10px] sm:underline-offset-[14px]">{author}</span>
                            <span class="text-3xl sm:text-5xl md:text-6xl">{title}</span>
                        </div>
                        <div class="w-full sm:w-[80%] md:w-2/3 flex flex-col justify-center text-lg sm:text-2xl md:text-4xl">
                            <slot/>
                        </div>
                    </section>
                    </>
                ))}
            </div>
        )
    }
</Layout>
