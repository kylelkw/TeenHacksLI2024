---
import LoaderScript from "./LoaderScript.tsx";
---

<section class="load-screen hidden fixed top-0 left-0 flex-col justify-center h-screen w-screen bg-accent-1 z-20 transition-all">
  <div class="absolute top-1/2 left-1/2 w-96 h-16 -translate-x-1/2">
    <div class="loader relative h-full bg-bg rounded-full opacity-0"></div>
  </div>
  <div class="counter fixed top-14 left-14 flex text-bg font-display text-8xl [clip-path:_polygon(0_0,_100%_0,_100%_96px,_0_96px)]">
    <div class="counter-1 digit">
      <div class="num">0</div>
      <div class="num relative -right-1/4">1</div>
    </div>
    <div class="counter-2 digit">
      <div class="num">0</div>
      <div class="num relative -right-1/4">1</div>
      <div class="num">2</div>
      <div class="num">3</div>
      <div class="num">4</div>
      <div class="num">5</div>
      <div class="num">6</div>
      <div class="num">7</div>
      <div class="num">8</div>
      <div class="num">9</div>
      <div class="num">0</div>
    </div>
    <div class="counter-3 digit">
      <div class="num">0</div>
      <div class="num relative -right-1/4">1</div>
      <div class="num">2</div>
      <div class="num">3</div>
      <div class="num">4</div>
      <div class="num">5</div>
      <div class="num">6</div>
      <div class="num">7</div>
      <div class="num">8</div>
      <div class="num">9</div>
      <div class="num">0</div>
    </div>
  </div>
</section>

<LoaderScript client:load />