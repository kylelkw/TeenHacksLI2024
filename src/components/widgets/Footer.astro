---
import ThemedImage from "../ui/ThemedImage.tsx";
import ItemColumn from "../ui/ItemColumn.astro"
import Button from "../ui/Button.astro";
---

<div class="flex flex-col w-full pt-14 px-6 sm:px-10 lg:px-14">
  <div class="w-full h-full bg-content-3 rounded-t-3xl pt-14 px-6 sm:px-10 lg:px-14">
    <!-- Top Row: Logo + Newsletter -->
    <div class="w-full flex flex-col lg:flex-row gap-y-10 lg:gap-y-0 lg:gap-x-14">
      <!-- Logo Block -->
      <div class="w-full lg:w-1/3 flex flex-col justify-between">
        <a class="h-[65px] mb-4" href="/">
          <ThemedImage
            darkModeUrl="/icons/textLogoWhite.svg"
            lightModeUrl="/icons/textLogoBlack.svg"
            className="h-full"
            loading="eager"
            alt="Teenhacks Logo"
            client:load
          />
        </a>
        <p class="text-content-1 mb-7">Â© TeenHacks LI 2025 </p>
      </div>

      <!-- Newsletter -->
      <div class="w-full lg:w-2/3 bg-content-1 rounded-3xl flex flex-col justify-between text-content-3 p-5">
        <input class="outline-none border-0 bg-transparent text-3xl sm:text-4xl placeholder-bg mb-4" id="email" name="email" type="text" required placeholder="Enter Your Email">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-end gap-4">
          <p class="text-bg text-base sm:text-lg">
            Sign up to join our newsletter and be notified of future TeenHacks LI events
          </p>
          <Button href="/join" text="Join Now" style="ACCENT1" />
        </div>
      </div>
    </div>

    <!-- Link Columns -->
    <section class="w-full flex flex-col sm:flex-row flex-wrap justify-between gap-y-10 gap-x-12 py-10 text-content-1">
      <div class="min-w-[150px]">
        <p class="text-content-2 mb-4">Resources</p>
        <ItemColumn
          items={[
            { title: 'Blogs', link: '/' },
            { title: 'FAQs', link: '/' },
            { title: 'Past Events', link: '/' },
            { title: 'Past Pages', link: '/' },
          ]}
        />
      </div>
      <div class="min-w-[150px]">
        <p class="text-content-2 mb-4">Company</p>
        <ItemColumn
          items={[
            { title: 'About', link: '/' },
            { title: 'Team', link: '/' },
            { title: 'Sponsors', link: '/' },
            { title: 'Press', link: '/' },
            { title: 'Contact', link: '/' },
          ]}
        />
      </div>
      <div class="min-w-[150px]">
        <p class="text-content-2 mb-4">Socials</p>
        <ItemColumn
          items={[
            { title: 'Instagram', link: '/' },
            { title: 'Discord', link: '/' },
            { title: 'LinkedIn', link: '/' },
            { title: 'Github', link: '/' },
          ]}
        />
      </div>
    </section>
  </div>
</div>
