---
import ThemedImage from "../ui/ThemedImage.tsx";
import ItemColumn from "../ui/ItemColumn.astro"
import Button from "../ui/Button.astro";
---

<div class="flex flex-col w-full pt-14 px-6 sm:px-10 lg:px-14">
  <div class="w-full h-full bg-content-3 rounded-t-3xl pt-10 sm:pt-14 px-4 sm:px-6 md:px-10 lg:px-14">
    <!-- Top Row: Logo + Newsletter -->
    <div class="w-full flex flex-col lg:flex-row gap-y-10 lg:gap-y-0 lg:gap-x-14">
      <!-- Logo Block -->
      <div class="w-full lg:w-1/3 flex flex-col justify-between">
        <a class="h-[45px] sm:h-[65px] mb-4" href="/">
          <ThemedImage
            darkModeUrl="/icons/textLogoWhite.svg"
            lightModeUrl="/icons/textLogoBlack.svg"
            className="h-full"
            loading="eager"
            alt="Teenhacks Logo"
            client:load
          />
        </a>
        <p class="text-content-1 mb-7">Â© TeenHacks LI 2025 </p>
      </div>

      <!-- Newsletter -->
      <div class="w-full lg:w-2/3 bg-content-1 rounded-3xl flex flex-col justify-between text-content-3 p-4 sm:p-5">
        <input class="outline-none border-0 bg-transparent text-2xl sm:text-3xl md:text-4xl placeholder-bg mb-4" id="email" name="email" type="text" required placeholder="Enter Your Email">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-end gap-4">
          <p class="text-bg text-sm sm:text-base md:text-lg">
            Sign up to join our newsletter and be notified of future TeenHacks LI events
          </p>
          <a
            href="https://forms.gle/Jrjq58s2daXpaqrm7"
            class="bg-content-2 rounded-full h-10 sm:h-12 px-4 sm:px-6 flex items-center justify-center font-display font-bold text-content-1 text-sm sm:text-base hover:scale-105 active:scale-90 transition-all"
          >
            Join Now
          </a>
        </div>
      </div>
    </div>

    <!-- Link Columns -->
    <section class="w-full flex flex-col sm:flex-row flex-wrap justify-between gap-y-8 sm:gap-y-10 gap-x-8 sm:gap-x-12 py-8 sm:py-10 text-content-1">
      <div class="min-w-[120px] sm:min-w-[150px]">
        <p class="text-content-2 mb-3 sm:mb-4">Resources</p>
        <ItemColumn
          items={[
            { title: 'Blogs', link: '/blog' },
            { title: 'FAQs', link: '/' },
          ]}
        />
      </div>
      <div class="min-w-[120px] sm:min-w-[150px]">
        <p class="text-content-2 mb-3 sm:mb-4">Company</p>
        <ItemColumn
          items={[
            { title: 'About', link: '/about' },
            { title: 'Sponsors', link: '/sponsors' },
            { title: 'Contact', link: 'mailto:thli@teenhacksli.com' },
          ]}
        />
      </div>

      <div class="min-w-[120px] sm:min-w-[150px]">
        <p class="text-content-2 mb-3 sm:mb-4">Socials</p>
        <ItemColumn
          items={[
            { title: 'Instagram', link: 'https://www.instagram.com/teenhacksli/?hl=en' },
            { title: 'Discord', link: 'https://discord.gg/vFKQTwv9vq' },
            { title: 'LinkedIn', link: 'https://www.linkedin.com/company/teenhacks-li' },
            { title: 'Github', link: 'https://github.com/kylelkw/TeenHacksLI2024' },
          ]}
        />
      </div>
    </section>
  </div>
</div>
